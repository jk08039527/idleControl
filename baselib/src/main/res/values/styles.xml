<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="custom_scrollbar_style">
        <item name="android:scrollbarSize">4.5dip</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <!-- Fragment 等待层-->
    <style name="refresh_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <!-- 对话框样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 分割线 -->
    <style name="vertical_line_style">
        <item name="android:layout_width">@dimen/half_dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_line_color_primary</item>
    </style>

    <!-- 分割线 -->
    <style name="horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/half_dp</item>
        <item name="android:background">@color/gray_line_color_primary</item>
    </style>

    <!-- textkey -->
    <style name="text_key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- textvalue -->
    <style name="text_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">@dimen/page_margin</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="menu_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingTop">@dimen/eight_dp</item>
        <item name="android:paddingBottom">@dimen/eight_dp</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="menu_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:paddingTop">@dimen/eight_dp</item>
        <item name="android:paddingBottom">@dimen/eight_dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/fifteen_dp</item>
    </style>

</resources>
